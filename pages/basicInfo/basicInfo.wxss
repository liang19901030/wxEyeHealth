page {
  display: block;
  min-height: 100%;
  background-color: #f4f4f4;
}

.container {
  padding: 0rem;
  width: 100%;
  height: 100%;
  display: block;
}

.section {
  width: 100%;
  display: flex;
  align-items: center;
  background-color: white;
  height: 112rpx;
}

.title {
  color: #000000;
  font-size: 17px;
  margin-left: 31rpx;
}

.value {
  color: #808080;
  font-size: 17px;
  margin-left: 205rpx;
}

.avatar {
  height: 154rpx;
}

.img {
  position: fixed;
  right: 54rpx;
  overflow: hidden;
  width: 114rpx;
  height: 114rpx;
  border-radius: 57rpx;
}

.arrow {
  position: fixed;
  width: 14rpx;
  height: 26rpx;
  right: 20rpx;
}

.bottom-line {
  width: 100%;
  height: 1px;
  background-color: #f4f4f4;
  margin-left: 30rpx;
  position: fixed;
}