/* pages/myOrder/myOrder.wxss */

.container {
  display: block;
  width: 100%;
  height: 100%;
}

.myOrder {
  display: flex;
  background-color: #FFFFFF;
  width: 100%;
  height: 88rpx;
}

.tabs {
  display: flex;
  flex-direction: column;
  width: 50%;
  align-items: center;
  justify-content: center;
}

.tabs-lab {
  font-size: 15px;
  text-align: center;
}

.chosen {
  color: #0487EF;
}

.not-treatment-line {
  background-color: #0487EF;
  width: 20rpx;
  height: 4rpx;
}

.my-order-list-container {
  width: 100%;
}

.my-order-scroll {
  height: 100%;
  position: fixed;
  background-color: #f4f4f4;
}

.my-order-list {
  display: flex;
  margin-top: 20rpx;
  width: 100%;
  background-color: #FFFFFF;
}

.doctor-header {
  width: 144rpx;
  height: 144rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.info {
  display: block;
  width: 100%;
  height: 100%;
  margin-left: 22rpx;
}

.name {
  margin-top: 40rpx;
  align-items: center;
}

.name-lab {
  color: #191919;
  font-size: 34rpx;
}

.title-lab {
  color: #4D4D4D;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.time-before-treatment {
  width: 267rpx;
  height: 52rpx;
  color: #FFFFFF;
  background-color: #E64340;
  font-size: 26rpx;
  float: right;
  padding-top: 15rpx;
  text-align: center;
  border-radius:52rpx 0rpx 0rpx 52rpx;
}

.hospital {
  margin-top: 28rpx;
  color: #808080;
  font-size: 30rpx;
}

.charge {
  margin-top: 24rpx;
  color: #808080;
  font-size: 30rpx;
}

.explain {
  margin-top: 10rpx;
  margin-left: 160rpx;
  color: #808080;
  font-size: 22rpx;
}

.date {
  color: #808080;
  font-size: 30rpx;
  margin-top: 28rpx;
}

.patient {
  color: #808080;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.status {
  width: 124rpx;
  height: 52rpx;
  float: right;
  font-size: 26rpx;
  text-align: center;
  color: #FFFFFF;
  background: #cccccc;
  padding-top: 15rpx;
  border-radius: 52rpx 0rpx 0rpx 52rpx;
}