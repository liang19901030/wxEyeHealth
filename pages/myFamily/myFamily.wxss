/* pages/myFamily/myFamily.wxss */

label {
  overflow: hidden;
  text-overflow: ellipsis;
}

 
 button::after {
  border-radius: 0rpx;
  border: none;
}

.container {
  display: flex;
}

.no_members {
   display: block;
   align-items: center;
}

.no_members_img {
  margin-top: 200rpx;
  width: 514rpx;
  height: 285rpx;
}

.no_members_lab{
  color: #808080;
  font-size: 17px;
  text-align: center;
  margin-top: 47rpx;
}

.no_members_btn {
  color: #FFFFFF;
  background-color: #0487EF;
  font-size: 17px;
  margin-top: 142rpx;
  width: 320rpx;
  height: 88rpx;
  border-radius: 44rpx;
}

.my-family-list {
  width: 100%;
}

.myFamily-scroll {
  background-color: #f4f4f4;
}

.myFamily-list {
  display: flex;
  margin-top: 20rpx;
  width: 100%;
  height: 120rpx;
  background-color: white;
  align-items: center;
}

.basicInfo {
  display: flex;
  align-items: center;
  width: 45%;
}

.number {
  display: flex;
}

.select_member {
  margin-left: 20rpx;
}

.select_member_img {
  width: 42rpx;
  height: 42rpx;
}

.name {
  display: flex;
  margin-left: 20rpx;
  width: 200rpx;
  color: #191919;
  font-size: 17px;
  align-items: center;
}

.sex {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.age {
  width: 100rpx;
  margin-left: 13rpx;
  color: #4D4D4D;
  font-size: 13px;
}

.line {
  width: 1px;
  height: 34px;
  background-color: #dbdbdb;
}

.number {
  display: block;
  width: 50%;
}

.phone {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.phoneIcon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 45rpx;
}

.number_label {
  color: #4D4D4D;
  font-size: 13px;
  margin-left: 20rpx;
}

.idCard {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.idCardIcon {
  width: 28rpx;
  height: 20rpx;
  margin-left: 45rpx;
}

.delete {
  height: 100%;
  float: right;
}

.delete-img {
  width: 36rpx;
  height: 36rpx;
}

.add-member {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 98rpx;
}

.order-add-member {
  display: flex;
}

.member-btn {
  font-size: 18px;
  border-radius: 0;
  height: 100%;
}

.add-member-btn {
  color: #FFFFFF;
  background-color: #0487EF;
}

.order-add-member-btn {
  width: 50%;
  color: #0487EF;
  background-color: #FFFFFF;
}

.order-sure {
  width: 50%;
  color: #FFFFFF;
  background-color: #0487EF;
}