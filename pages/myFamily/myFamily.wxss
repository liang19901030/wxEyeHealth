/* pages/myFamily/myFamily.wxss */

label {
  overflow: hidden;
  text-overflow: ellipsis;
}

.container {
  display: flex;
}

.myFamily-scroll {
  background-color: #f4f4f4;
}

.myFamily-list {
  display: flex;
  margin-top: 20rpx;
  width: 100%;
  height: 120rpx;
  background-color: white;
  align-items: center;
}

.basicInfo {
  display: flex;
  align-items: center;
  width: 45%;
}

.number {
  display: flex;
}

.name {
  display: flex;
  margin-left: 20rpx;
  width: 200rpx;
  color: #191919;
  font-size: 17px;
  align-items: center;
}

.sex {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.age {
  width: 100rpx;
  margin-left: 13rpx;
  color: #4D4D4D;
  font-size: 13px;
}

.line {
  width: 1px;
  height: 34px;
  background-color: #dbdbdb;
}

.number {
  display: block;
  width: 50%;
}

.phone {
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}

.phoneIcon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 45rpx;
}

.number_label {
  color: #4D4D4D;
  font-size: 13px;
  margin-left: 20rpx;
}

.idCard {
  display: flex;
  margin-top: 32rpx;
  align-items: center;
}

.idCardIcon {
  width: 28rpx;
  height: 20rpx;
  margin-left: 45rpx;
}