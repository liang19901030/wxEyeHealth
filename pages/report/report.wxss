/* pages/report/report.wxss */

page {
  width: 100%;
  height: 100%;
}

label {
  overflow: hidden;
  text-overflow: ellipsis;
}

.report-container {
  width: 100%;
}

.report-list-scroll {
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.report-list {
  margin-top: 10rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  width: calc(100% - 40rpx);
  height: 202rpx;
  background-color: #FFFEFF;
}

.patient-info {
  display: flex;
  width: 100%;
  height: 144rpx;
}

.report-info {
  width: 100%;
  height: 58rpx;
}

.cover {
  width: 124rpx;
  height: 124rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.basic-info {
  display: block;
  width: 100%;
  margin-left: 20rpx;
}

.name {
  display: flex;
  margin-top: 20rpx;
  color: #1A1A1A;
  font-size: 30rpx;
  align-items: center;
}

.sex {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.age {
  color: #4D4D4D;
  font-size: 26rpx;
  margin-right: 20rpx;
  float: right;
}

.description {
  width: 524rpx;
  height: 80rpx;
  margin-top: 15rpx;
  color: #1A1A1A;
  font-size: 26rpx;
  align-items: center;
}

.description-lab {
  width: 524rpx;
  height: 80rpx;
}