/* pages/order/order.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.section {
  background-color: #FFFFFF;
}

.city-view {
  display: flex;
  width: 100%;
  height: 88rpx;
  align-items: center;
}

.city {
  color: #0487EF;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.city-line {
  width: 1rpx;
  height: 48rpx;
  margin-left: 60rpx;
  background-color: #DBDBDB;
}

.hospital {
  color: #1A1A1A;
  font-size: 30rpx;
  margin-left: 50rpx;
}

.member-view {
  display: flex;
  width: 100%;
  height: 88rpx;
  margin-top: 20rpx;
  align-items: center;
}

.select-member {
  color: #1A1A1A;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.member {
  position: fixed;
  right: 60rpx;
  color: #808080;
  font-size: 30rpx;
}

.select-member-img {
  position: fixed;
  right: 26rpx;
  width: 14rpx;
  height: 26rpx;
}

.order-date-view {
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
}

.today {
  display: flex;
  height: 76rpx;
  color: #808080;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
}

.date-view {
  display: flex;
  width: calc(100% - 40rpx);
  height: 104rpx;
  margin-left: 20rpx;
}

.order-date {
  width: 100rpx;
  height: 104rpx;
}

.week {
  color: #999999;
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
}

.date {
  color: #4D4D4D;
  font-size: 36rpx;
  text-align: center;
}