/* pages/order/order.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.section {
  background-color: #FFFFFF;
}

.city-view {
  display: flex;
  width: 100%;
  height: 88rpx;
  align-items: center;
}

.city {
  color: #0487EF;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.city-line {
  width: 1rpx;
  height: 48rpx;
  margin-left: 60rpx;
  background-color: #DBDBDB;
}

.hospital {
  color: #1A1A1A;
  font-size: 30rpx;
  margin-left: 50rpx;
}

.member-view {
  display: block;
  width: 100%;
  height: 88rpx;
  margin-top: 20rpx;
}

.select-member {
  color: #1A1A1A;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.member {
  color: #808080;
  font-size: 30rpx;
  float: right;
  margin-right: 20rpx;
}

.select-member-img {
  width: 14rpx;
  height: 26rpx;
  float: right;
  margin-right: 26rpx;
}