/* pages/order/order.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.section {
  background-color: #FFFFFF;
}

.city-view {
  display: flex;
  width: 100%;
  height: 88rpx;
  align-items: center;
}

.city {
  color: #0487EF;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.city-line {
  width: 1rpx;
  height: 48rpx;
  margin-left: 60rpx;
  background-color: #DBDBDB;
}

.hospital {
  color: #1A1A1A;
  font-size: 30rpx;
  margin-left: 50rpx;
}

.member-view {
  display: flex;
  width: 100%;
  height: 88rpx;
  margin-top: 20rpx;
  align-items: center;
}

.select-member {
  color: #1A1A1A;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.member {
  position: fixed;
  right: 60rpx;
  color: #808080;
  font-size: 30rpx;
}

.select-member-img {
  position: fixed;
  right: 26rpx;
  width: 14rpx;
  height: 26rpx;
}

.order-date-view {
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
}

.today {
  display: flex;
  height: 76rpx;
  color: #808080;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
}

.date-view {
  display: flex;
  width: calc(100% - 40rpx);
  height: 104rpx;
  margin-left: 20rpx;
}

.order-date {
  width: 100rpx;
  height: 104rpx;
}

.week {
  color: #999999;
  font-size: 26rpx;
  text-align: center;
  margin-top: 10rpx;
}

.date {
  color: #4D4D4D;
  font-size: 36rpx;
  text-align: center;
}

.treatment-doctor {
  color: #888888;
  background-color: #f4f4f4;
  font-size: 30rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.doctor-list-scroll {
  height: 100%;
}

.doctor-list {
  width: 100%;
  height: 183rpx;
  background-color: #FFFFFF;
}

.doctor-info {
  display: flex;
}

.cover {
  margin-top: 30rpx;
  margin-left: 30rpx;
  width: 120rpx;
  height: 120rpx;
}

.basic-info {
  margin-left: 20rpx;
  width: 100%;
}

.name {
  margin-top: 28rpx;
}

.name-lab {
  font-size: 34rpx;
  color: #000000;
}

.title-lab {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #4D4D4D;
}

.status-lab {
  font-size: 30rpx;
  color: #0487EF;
  margin-right: 20rpx;
  float: right;
}

.major {
  font-size: 26rpx;
  color: #1A1A1A;
}

.line {
  height: 1rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  background-color: #EEEEEE;
}