page {
  width: 100%;
  height: 100%;
}

.container {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}

.section {
  display: flex;
  width: calc(100% - 60rpx);
  height: 100rpx;
  margin-left: 30rpx;
}

.bottom-line {
  width: calc(100% - 60rpx);
  height: 1px;
  margin-left: 30rpx;
  position: fixed;
  background-color: #DBDBDB;
}

.phcolor {
  color: #CCCCCC;
  font-size: 34rpx;
}

.img {
  margin-top: 50rpx;
}

.name {
  width: 36rpx;
  height: 38rpx;
}

.value-input {
  color: #1A1A1A;
  font-size: 34rpx;
  margin-top: 40rpx;
  margin-left: 37rpx;
}

.idCard {
  width: 41rpx;
  height: 29rpx;
}

.teleno {
  width: 32rpx;
  height: 40rpx;
}

.code {
  width: 34rpx;
  height: 39rpx;
}