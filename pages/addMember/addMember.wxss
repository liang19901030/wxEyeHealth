/* pages/addMember/addMember.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}

.section {
  display: flex;
  width: calc(100% - 60rpx);
  height: 100rpx;
  margin-left: 30rpx;
}

.bottom-line {
  width: calc(100% - 60rpx);
  height: 1px;
  margin-left: 30rpx;
  position: fixed;
  background-color: #DBDBDB;
}

.phcolor {
  color: #CCCCCC;
  font-size: 34rpx;
}

.img {
  margin-top: 50rpx;
}

.name {
  width: 36rpx;
  height: 38rpx;
}

.value-input {
  color: #1A1A1A;
  font-size: 34rpx;
  margin-top: 40rpx;
  margin-left: 37rpx;
}

.idCard {
  width: 41rpx;
  height: 29rpx;
}

.teleno-view {
  display: flex;
}

.teleno {
  width: 32rpx;
  height: 40rpx;
}

.code {
  width: 34rpx;
  height: 39rpx;
}

.request-code {
  width: 280rpx;
  height: 32rpx;
  font-size: 34rpx;
  text-align: right;
  margin-top: 40rpx;
  color: #0487EF;
}

.statement {
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.mark {
  color: #E60012;
  font-size: 24rpx;
}

.statement-text {
  color: #808080;
  font-size: 24rpx;
}

.done-btn {
  margin-top: 40rpx;
  width: calc(100% - 60rpx);
  color: #FFFFFF;
  background-color: #0487EF;
}